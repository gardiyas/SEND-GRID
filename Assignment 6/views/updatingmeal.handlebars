<main role="main" class="container-fluid">
    <div class="jumbotron" style="padding: 2rem 2rem; margin-top:20px">
        <h1>Update Package</h1>
        <p class=" lead">Fill the field to update a meal package.</p>
        <p style="color:#ef5350"> Reattach the picture and tick if it is still a top meal.</p>

    </div>

</main>

<div class="form">
    <div class="container" style="padding-bottom: 80px">
        <!--"-->
        <form class="needs-validation" action="/mealupdated" method="Post" novalidate>
            <div class=" form-group row">
                <div class="col">
                    <label for="name">Meal Package name</label>
                     <input type="text" name="name" class="form-control" id="exampleFormControlTextarea1"
                    placeholder="Meal Package name" required value="{{name}}">
                    <div class="invalid-feedback">
                        Field Can't be left empty.
                    </div>
                </div>

                <div class="col">
                    <label for="meals">Number of meals</label>
                    <input type="text" name="meals" class="form-control" id="validationCustom02" placeholder="Number of meals"
                        required value={{meals}}>
                    <div class="invalid-feedback">
                        Field Can't be left empty.
                    </div>
                </div>
            </div>
{{!-- 
      <input type="text" name="synopsis" class="form-control" id="exampleFormControlTextarea1" placeholder="Ex-Includes Low carb food."
                    required value={{synopsis}}> --}}
            <div class="form-group">
                <label for="synopsis">Synopsis of package.</label>
            <input type="text" name="synopsis" class="form-control" id="exampleFormControlTextarea1"
                    placeholder="Ex-Includes Low carb food." required value="{{synopsis}}">
                     <div class="invalid-feedback">
                        Field Can't be left empty.
                    </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="category">Category</label>
                    <select name="category" id="inputCity" class="form-control" value={{category}}>
                        <option selected>Vegan</option>
                        <option>Non-vegetarian</option>

                    </select>
                    <div class="invalid-feedback">
                        Field Can't be left empty.
                    </div>

                </div>

                <div class="form-group col-md-2">
                    <label for="price">Price</label>
                    <input name="price" type="text" class="form-control" id="inputZip" name="price" placeholder="Price in CAD"
                        required value={{price}}>
                    <div class="invalid-feedback" id="ziperror">
                        Field Can't be left empty and try suggested format
                    </div>
                </div>

            </div>

            <br>


            <div class="form-group col-md-10">
                <label for="desc">Description</label>
              <input type="text" name="desc" class="form-control" id="exampleFormControlTextarea1"
                    placeholder="Description of the meal" required value="{{desc}}">
                <div class="invalid-feedback">
                    Field Can't be left empty.
                </div>
            </div>
            <div class="form-group  col-md-12">
                        <div class="form-check">
                            <input name="istop" class="form-check-input" type="checkbox" id="gridCheck"  value={{istop}}>
                            <label class="form-check-label" for="gridCheck">
                                Is this a Top meal package?
                            </label><br>
                        </div>
                    </div>
                <div class="form-group  col-md-5 col-sm-8 col-xs-6 ">
                    <label for="imagw">Upload image</label>
                    <input name="image" type="file" class="form-control-file" id="exampleFormControlFile1">
                </div>
                <br>
                <button type="submit" class="btn btn-secondary btn-lg">Submit</button>
        </form>
    </div>
</div>
</div>
<script>
    (function () {
        'use strict';
        window.addEventListener('load', function () {
            // Fetch all the forms we want to apply custom Bootstrap validation styles to
            var forms = document.getElementsByClassName('needs-validation');
            // Loop over them and prevent submission
            var validation = Array.prototype.filter.call(forms, function (form) {
                form.addEventListener('submit', function (event) {
                    if (form.checkValidity() === false) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        }, false);
    })();

</script>
