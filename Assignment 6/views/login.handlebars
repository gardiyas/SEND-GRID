<main role="main" class="container-fluid">
    <div class="jumbotron" style="padding: 2rem 2rem; margin-top:20px">
        <h1>Log in</h1>
        <p class=" lead">Fill the field to Log in to BigFOOD</p>
        <p style="color:#ef5350"> All fields required</p>
         <div style="color: width: 100%;
                            margin-top: .25rem;
                            font-size: 80%;
                            color: green;">
                {{confirmation}}
            </div>
    </div>

</main>
<div class="form">
    <div class="container" style="padding-bottom: 80px">
        <!--"-->
        <form action="submit-login" method="Post">
            <div class=" form-group row">
                <div class="col">
                    <label for="name">Email</label>
                    <input type="text" name="email" class="form-control" placeholder="Email" value={{storedEmail}}>
                    <div style="color: width: 100%;
                            margin-top: .25rem;
                            font-size: 80%;
                            color: #dc3545;">
                        {{#each email}}
                        {{this}}
                        {{/each}}
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" name="password" class="form-control" placeholder="Password" value={{storedPass}}>

            </div>
            <div style="color: width: 100%;
                            margin-top: .25rem;
                            font-size: 80%;
                            color: #dc3545;">
                {{#each pass}}
                {{this}}
                {{/each}}
            </div>
                
            <button type="submit" class="btn btn-secondary btn-lg">Log in</button> <br> <br>
            <div class="form-group ">
                <p> New User? <a href="/signup">Create an Account</a>.</p>
            </div>
        </form>

    </div>

</div>

<style>
    form {
        padding: 20px;
        margin: 0px;
        border: 3px solid #f1f1f1;
    }

    button {
        height: 45px;
        margin-top: 32px;
    }
</style>